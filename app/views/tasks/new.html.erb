<h1>Nueva tarea</h1>

<%= form_for(@task) do |f| %>
     <%#= render 'shared/error_messages' %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :comments, 'Comentarios' %>
      <%= f.text_field :comments %>

      <%= date_select :task, :duedate %>

      <%= f.hidden_field :list_id, :value => params[:list_id] %> 

      <%= f.submit "Crear", class: "btn btn-large btn-primary" %>
    <% end %>
