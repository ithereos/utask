<% provide(:title, 'Nueva lista') %>
<h1> Nueva lista de tareas </h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@list) do |f| %>
     <%#= render 'shared/error_messages' %>

      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name %>

      <%= f.label :category, "Categoria" %>
      <%= f.collection_select :category, Category.order(:id),:name,:name, prompt: "Seleccione" %>

      <%= f.submit "Crear", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
