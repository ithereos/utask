	<table class ="table table-striped">
	<% @categories.each do |category| %>
	<tr>
		<th>
			<h2><%= category.name %></h2>


		</th>
	</tr>
	
	<% @lists.each do |list| %> 
	<% if list.category == category.name %>
	<tr>
		<td>
			<span><%= link_to list.name, list_path(list) %></span>
				<span style="float:right;padding-left:2px"><%= link_to "Editar", edit_list_path(list), class: "btn btn-mini btn-success" %>  </span>
			<span style="float:right"><%= link_to "Eliminar", list, class: "btn btn-mini btn-danger", method: :delete,
                                  data: { confirm: "EstÃ¡ seguro que quiere eliminar la lista?" } %>
            </span> 
		</td>

	</tr>

	
	
	<% end %>
	
	<% end %>

	<% end %>
