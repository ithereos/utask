			<td>
				<span><%= task.description %></span>
				<span style="float:right;padding-left:2px"><%= link_to "Editar", edit_task_path(task), class: "btn btn-mini btn-success" %>  </span>
				<span style="float:right"><%= link_to "Eliminar", task, class: "btn btn-mini btn-danger", method: :delete,
                                  data: { confirm: "EstÃ¡ seguro que quiere eliminar la tarea?" } %>
                </span> 
			</td>
			
			
		</tr>		
		<% end %> 
	</table>
<%= link_to "Nueva tarea", new_task_path(list_id: @list.id), class: "btn btn-large btn-primary" %>
